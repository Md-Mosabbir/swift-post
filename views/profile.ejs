<% include ./partials/navigationBar %>

<main class="h-screen w-full p-8"> 
  
  <div class="w-full">
    <div class="flex flex-col">
       
      <div class="flex justify-start items-center gap-14 w-full">
        <img
          src="https://i.pinimg.com/236x/5e/75/4d/5e754dcdb067c149bc7567627dbb5abe.jpg"
          alt="Profile Image"
          class="rounded-full object-center"
        />
        <div class="my-10 flex flex-col items-start w-full">
          <h1 class="text-3xl font-bold"><%= user.first_name %>  <%= user.last_name %></h1>
          <p class="text-gray-600"><%= user.username %></p>
          <!-- <div class="flex justify-center mt-7">
            <span class="mr-4">Followers: 2.5k</span>
            <span class="mr-4">Following: 20</span>
            <span>Badges: 3</span>
          </div> -->
          <div class="flex gap-2 justify-center mt-10 w-72">
            <a href="/profile/edit" class="w-full">
              <button
              class="bg-blue-500 text-white px-4 py-2 rounded-full mr-2 w-full"
              
            >
              Edit
            </button>
            </a>
            <a href="/profile/delete" class="w-full">
              <button class="bg-red-500 text-white px-4 py-2 rounded-full w-full">
                Delete
              </button>
            </a>
            
          </div>
        </div>
      </div>

      <!-- Display storylines below -->

      <div class="mb-10">
        <h2 class="text-xl text-center font-bold mt-4 border-b-4 mb-9">
          Posts
        </h2>
        <div
          class=" flex justify-start gap-4 flex-wrap relative mx-auto"
        >
          <% if (user.storylines.length > 0) { %> 
            <% user.storylines.forEach((storyline) => { %>
          <a href="/storyline/<%= storyline._id %>">
            <div>
            
              <h3 class="font-bold"> <%= storyline.title %> </h3>
              
              <div
                class="min-w-[550px] h-64 rounded-2xl inset-0 bg-white shadow-inner border-2 flex justify-start items-center relative p-8"
              >
                <div
                  class="w-96 h-52 rounded-md bg-white border-4 absolute z-30 flex justify-start items-start p-3 pt-5 pl-9 text-lg"
                >
                <% if (storyline.timeLogs.length > 0) { %>
                  <p><%= storyline.timeLogs[0].post %></p>
                <% } else { %>
                  <p>No timelog available</p>
                <% } %>
                
              </div>
                <div
                  class="w-96 h-48 rounded-md bg-white border-4  absolute left-14 z-20"
                ></div>
                <div
                  class="w-96 h-44 rounded-md bg-white border-4 absolute left-20 z-10"
                ></div>
              </div>
            </div>
          </a>

          <% }) %>

          <% } else { %>
          <p>No storylines available.</p>
          <% } %> 
        </div>
      </div>
    </div>
  </div>

  <% include ./partials/createButton %>
</main>


