<% include ./partials/navigationBar %>
<main class="flex justify-center items-center w-full p-4">
  <div
    class="flex flex-col gap-10 border-2 w-3/5 h-1/2 p-7 rounded-3xl max-md:w-full"
  >
    <div class="flex gap-5 items-center">
      <h1 class="font-extrabold text-4xl font-poppins max-md:text-2xl">
        Edit Time-log
      </h1>
      <form
        action="/storyline/time-log/<%= id %>/delete?_method=DELETE"
        method="post"
      >
        <button
          class="w-8 h-8 aspect-square bg-red-600 rounded-full"
          type="submit"
        >
          <i class="fa-solid fa-trash" style="color: #ffffff"></i>
        </button>
      </form>
    </div>
    <form action="/storyline/time-log/<%= id %>/edit" method="post">
      <textarea
        name="editTimeLog"
        id="edit-time-log"
        class="resize-none w-full py-10 rounded-2xl border-2 px-4"
      >
    <%= timeLog.post %></textarea
      >
      <div class="w-full flex justify-center">
        <button
          type="submit"
          class="px-8 py-3 mt-6 bg-green-200 text-2xl rounded-xl"
        >
          Save
        </button>
      </div>
    </form>
  </div>
</main>
